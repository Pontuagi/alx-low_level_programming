# Makefile for the executable school
#

CC = gcc

CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = school.c main.c
OBJ = $(SRC:.c=.o)
NAME = school

RM = rm -f

ifeq ($(wildcard m.h),)
	$(error m.h not found)
endif

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -O $(NAME) $(OBJ)


clean:
	$(RM) *~ *.swp $(NAME)
oclean:
	$(RM) $(OBJ)
fclean: clean oclean
re: fclean all

.c.o:
	$(CC) $(CFLAGS) -c $< -o $@

.PHONY: all clean oclean fclean re
