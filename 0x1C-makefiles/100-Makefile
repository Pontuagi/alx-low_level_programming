# Makefile for the executable school
#

CC = gcc

CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = school.c main.c
OBJ = $(SRC:.c=.o)
NAME = school

ifeq ($(wildcard m.h),)
$(error m.h not found)
endif

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $^ $(CFLAGS) -o $@

.c.o:
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	$(RM) *~ $(NAME)
oclean:
	$(RM) $(OBJ)
fclean: clean oclean
re: fclean all

.PHONY: all clean oclean fclean re
